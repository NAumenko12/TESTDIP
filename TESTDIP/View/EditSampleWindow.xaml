<Window x:Class="TESTDIP.View.EditSampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESTDIP.View"
        mc:Ignorable="d"
        Title="Редактирование пробы" 
        Height="800" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Металл -->
        <TextBlock Text="Металл:" 
                   Grid.Row="0" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold"/>

        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="5" 
                Margin="0,5">
            <TextBlock Text="{Binding EditedSample.Metal.Name}" 
                       VerticalAlignment="Center" 
                       FontSize="14"/>
        </Border>

        <!-- Значение -->
        <TextBlock Text="Значение:" 
                   Grid.Row="2" 
                   VerticalAlignment="Center" 
                   Margin="0,10"/>

        <Border Grid.Row="3" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="5" 
                Margin="0,5">
            <TextBox Text="{Binding EditedSample.Value, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center" 
                     BorderThickness="0"/>
        </Border>

        <!-- Дата отбора -->
        <TextBlock Text="Дата отбора:" 
                   Grid.Row="4" 
                   VerticalAlignment="Center" 
                   Margin="0,10"/>

        <Border Grid.Row="5" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="5" 
                Margin="0,5">
            <DatePicker SelectedDate="{Binding EditedSample.SamplingDate, UpdateSourceTrigger=PropertyChanged}"
                        VerticalContentAlignment="Center"
                        BorderThickness="0"/>
        </Border>

        <!-- Номер аналитики -->
        <TextBlock Text="Номер аналитики:" 
                   Grid.Row="6" 
                   VerticalAlignment="Center" 
                   Margin="0,10"/>

        <Border Grid.Row="7" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="5" 
                Margin="0,5">
            <TextBox Text="{Binding EditedSample.AnalyticsNumber, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center" 
                     BorderThickness="0"/>
        </Border>

        <!-- Вид -->
        <TextBlock Text="Вид:" 
                   Grid.Row="8" 
                   VerticalAlignment="Center" 
                   Margin="0,10"/>

        <Border Grid.Row="9" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="5" 
                Margin="0,5">
            <TextBox Text="{Binding EditedSample.Type, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center" 
                     BorderThickness="0"/>
        </Border>

        <!-- Фракция -->
        <TextBlock Text="Фракция:" 
                   Grid.Row="10" 
                   VerticalAlignment="Center" 
                   Margin="0,10"/>

        <Border Grid.Row="11" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="5" 
                Margin="0,5">
            <TextBox Text="{Binding EditedSample.Fraction, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center" 
                     BorderThickness="0"/>
        </Border>

        <!-- Повторность -->
        <TextBlock Text="Повторность:" 
                   Grid.Row="12" 
                   VerticalAlignment="Center" 
                   Margin="0,10"/>

        <Border Grid.Row="13" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="5" 
                Margin="0,5">
            <TextBox Text="{Binding EditedSample.Repetition, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center" 
                     BorderThickness="0"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="16" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="0,20">
            <Button Content="Отмена" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,15,0" 
                    Command="{Binding CancelCommand}"/>
            <Button Content="Сохранить" 
                    Width="120" 
                    Height="30" 
                    Command="{Binding SaveCommand}" 
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>